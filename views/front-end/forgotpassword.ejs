  <!DOCTYPE html>
  <html lang="en">
  <head>
      <% include ../partials/head %>
  </head>
  <body>
      <div class="header">
          <% include ../partials/header %>
      </div>
      <div class="mainforgotpassword pb-5 pt-5 ">
        <div class="container">
            <div class="textheadrlogin">
                <div class="row">
                    <div class="col-md-6">
                        <a href="/">Trang chủ</a><span><i class="fa fa-angle-right"
                            aria-hidden="true"></i></span><label for="">Quên mật khẩu</label>
                    </div>
                    <div class="col-md-6 text-right">
                        <div>
                            <h5>TÀI KHOẢN CỦA TÔI</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="resetpass col-md-6 pt-5">
                    <h5>QUÊN MẬT KHẨU</h5>
                    <% if (success_msg.length > 0) { %>
                        <div class="alert alert-success"><%= success_msg %></div>
                      <% }else{%>
                        <p class="pt-3">Quý khác vui lòng điền địa chỉ Email. Và kiểm tra hộp thư.</p>
                        <% } %>
                    <form id="forgot-password"
                    method="post"
                    novalidate="novalidate"
                    action="/forgotpassword" class=" pt-3 pb-3">
                        <div>
                            <% if (message.length > 0) { %>
                                <div class="alert alert-danger"><%= message %></div>
                            <% } %>
                            <label for="uname">Nhập email của bạn</label>
                            <span class="required">*</span>
                            <input type="text" name="email" required>
                            <button style="color: aliceblue;" type="submit"><b>XÁC NHẬN</b></button>
                        </div>
                    </form>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </div>
    
      <div class="footer">
          <% include ../partials/footer %>
      </div>
  </body>
  </html>