<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>
    <div class="header">
        <% include ../partials/header %>
    </div>
    <div class="maincheckout pt-5 pb-5">
        <div class="container">
            <div class="textheadrlogin">
                <div class="row">
                    <div class="col-md-6">
                        <a href="/">Trang chủ </a><span><i class="fa fa-angle-right"
                                aria-hidden="true"></i></span><label for="">Thanh toán</label>
                    </div>
                    <div class="col-md-6 text-right">
                        <div>
                            <h5>THANH TOÁN ĐƠN HÀNG</h5>
                        </div>

                    </div>
                </div>
            </div>
            <div class="checkout pt-5">
                <div class="row">
                    <div class="billing col-md-7">
                        <h5>CHI TIẾT HÓA ĐƠN</h5>
                        <form method="POST" action="/checkout">
                            <div>
                                <label for="psw">Người Nhận</label>
                                <abbr class="required" title="required">*</abbr>
                                <input type="text" placeholder="" name="nguoinhan" required>
                                <label for="psw">Số điện thoại</label>
                                <abbr class="required" title="required">*</abbr>
                                <input type="text" placeholder="" name="phone" required>
                                <label for="psw">Địa chỉ nhận hàng</label>
                                <abbr class="required" title="add">*</abbr>
                                <input type="text" placeholder="" name="address" required>
                                <label for="psw">Email</label>
                                <abbr class="required" title="required">*</abbr>
                                <input type="text" placeholder="" name="email" required>
                                <label for="psw">Lời nhắn</label>
                                <input type="text" placeholder="" name="loinhan" required>
                                <label>
                                    <input type="checkbox" checked="checked" name="remember"> Cam kết những thông tin trên là chính xác.
                                </label>
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn">THANH TOÁN</button>
                            </div>
                        </form>
                    </div>
                    <div class="oder col-md-5 pb-5">
                        <h5 class="pb-5">THANH TOÁN</h5>

                        <div class="oder1 ">
                            <h5 class="pt-5 text-center pb-3">HÓA ĐƠN THANH TOÁN</h5>
                            <div class="container">
                                <table>
                                    <% var id = 0%>
                                    <% if(cartProduct != null){ cartProduct.forEach(function(item){ id++
                                        %>
                                    <tr>
                                        <th>SẢN PHẨM <%= id%>:</th>
                                        <td><%= item.item.name %></td>
                                    </tr>
                                    <tr>
                                        <th>SỐ LƯỢNG:</th>
                                        <td><%= item.qty %> chiếc</td>
                                    </tr>
                                    <tr>
                                        <th>GIÁ BÁN:</th>
                                        <td> <%= item.item.price %>VNĐ₫</td>
                                    </tr>
                                    <%})}%>
                                    <tr>
                                        <th>PHÍ VẬN CHUYỂN:</th>
                                        <td>Miễn phí</td>
                                    </tr>
                                    <tr>
                                        <th class="pt-3 pb-3">
                                            <h5>TỔNG TIỀN:</h5>
                                        </th>
                                        <td class="pt-3 pb-3">
                                            <h5><%= session.cart.totalPrice %> VNĐ</h5>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <h5 class="pt-5 text-center">PHƯƠNG THỨC THANH TOÁN</h5>
                            <form class="pt-3 pl-3">
                                <div class="radio">
                                    <label><input type="radio" name="optradio" checked> Thanh toán khi nhận hàng</label>
                                </div>
                                <div class="radio">
                                    <label><input type="radio" name="optradio">  Thanh toán bằng Zalo Pay</label>
                                </div>
                                <div class="radio">
                                    <label><input type="radio" name="optradio">  Thanh toán bằng tài khoản ngân hàng</label>
                                </div>
                                <div class="radio">
                                    <label><input type="radio" name="optradio"> Thanh toán bằng PayPal  <img src="https://www.paypalobjects.com/webstatic/mktg/Logo/AM_mc_vs_ms_ae_UK.png" width="130px" height="50px" alt="PayPal acceptance mark"></label>
                                </div>
                            </form>
                          
                                                  </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
      
    <div class="footer">
        <% include ../partials/footer %>
    </div>
    <script>
        //<![CDATA[
        $('input.input-qty').each(function() {
                var $this = $(this),
                    qty = $this.parent().find('.is-form'),
                    min = Number($this.attr('min')),
                    max = Number($this.attr('max'))
                if (min == 0) {
                    var d = 0
                } else d = min
                $(qty).on('click', function() {
                    if ($(this).hasClass('minus')) {
                        if (d > min) d += -1
                    } else if ($(this).hasClass('plus')) {
                        var x = Number($this.val()) + 1
                        if (x <= max) d += 1
                    }
                    $this.attr('value', d).val(d)
                })
            })
            //]]>
            //srcoll-to-top
        $(document).ready(function() {
            $('body').append('<div id="toTop"><i class="fa fa-angle-up" aria-hidden="true"></i></div>');
            $(window).scroll(function() {
                if ($(this).scrollTop() != 0) {
                    $('#toTop').fadeIn();
                } else {
                    $('#toTop').fadeOut();
                }
            });
            $('#toTop').click(function() {
                $("html, body").animate({
                    scrollTop: 0
                }, 1000);
                return false;
            });
        });
    </script>
    </script>
</body>
</html>