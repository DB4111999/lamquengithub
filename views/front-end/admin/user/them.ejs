<!-- START CONTAINER -->
<div class="page-container row-fluid container-fluid">
    <!-- SIDEBAR - START -->
   
         <% include ../playout/menu.ejs %>


    <!--  SIDEBAR - END -->
    <!-- START CONTENT -->
    <section id="main-content" class=" ">
    <section class="wrapper main-wrapper row">
        <div class='col-xs-12'>
            <div class="page-title">
                <div class="pull-left">
                    <h1 class="title">Thêm Thành Viên</h1>
                </div>
                <div class="pull-right hidden-xs">
              
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-xs-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Thông Tin</h2>
                    <div class="actions panel_actions pull-right">
                        <a class="box_toggle fa fa-chevron-down"></a>
                        <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                        <a class="box_close fa fa-times"></a>
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">                                     
                    <form action="" enctype="multipart/form-data" role="form" method="POST">
                        <% if (message.length > 0) { %>
                            <div class="alert alert-danger"><%= message %></div>
                        <% } %>
                        <% if (success_msg.length > 0) { %>
                            <div class="alert alert-success"><%= success_msg %></div>
                          <% } %>
                            <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                <div class="form-group">
                                    <label class="form-label" for="field-120334">Name</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" id="username" value="" class="form-control" name="username">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                <div class="form-group">
                                    <label class="form-label" for="field-120334">Hình</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="file" name="images" multiple id="input-many-files" class="form-control-file border" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                <div class="form-group">
                                    <label class="form-label" for="field-120334">fullname</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" id="fullname" value="" class="form-control" name="fullname">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                <div class="form-group">
                                    <label class="form-label" for="field-120334">email</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" id="email" value="" class="form-control" name="email">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                <div class="form-group">
                                    <label class="form-label" for="field-120334">Phone</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" id="phoneNumber" value="" class="form-control" name="phoneNumber">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                <div class="form-group">
                                    <label class="form-label" for="field-120334">address</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" id="address" value="" class="form-control" name="address">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                <div class="form-group">
                                    <label class="form-label" for="field-120334">password</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="password" id="password" value="" class="form-control" name="password">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                <div class="form-group">
                                    <label class="form-label" for="field-120334">password2</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="password" id="password2" value="" class="form-control" name="password2">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                <div class="form-group">
                                    <label class="form-label" for="field-120334">Phân Quyên</label>
                                    <span class="desc"></span>
                                    <div class="controls">         
                                        <select class="form-control" name="PhanQuyen">
                                            <% quyen.forEach(function(quyen){ %> 
                                                <option value="<%= quyen._id%>"><%= quyen.TenQuyen%></option>
                                            <%})%>
                                        </select>

                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                <div class="text-left">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                    <button type="button" class="btn">Cancel</button>
                                </div>
                            </div>
                        </form>
                        </div>
                    </div>
            </section>
            </div>
    </section>
</section>
