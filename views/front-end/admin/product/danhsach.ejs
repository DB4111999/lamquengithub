<% include ../playout/head %>
        <div class="page-container row-fluid container-fluid">
                 <% include ../playout/menu.ejs %>
            <section id="main-content" class=" ">
                <section class="wrapper main-wrapper row">
                    <div class='col-xs-12'>
                        <div class="page-title">
                            <div class="pull-left">
                                <h1 class="title">Danh Sách Sản Phẩm</h1>
                            </div>
                            <div class="pull-right hidden-xs">       
                                            
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-12">
                        <section class="box ">
                            <header class="panel_header">
                                <h2 class="title pull-left">All Sản Phẩm</h2>
                                <div class="actions panel_actions pull-right">
                                    <a class="box_toggle fa fa-chevron-down"></a>
                                    <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                                    <a class="box_close fa fa-times"></a>
                                </div>
                            </header>
                            <div class="content-body">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <% if (success_msg.length > 0) { %>
                                            <div class="alert alert-success"><%= success_msg %></div>
                                          <% } %>    
                                        
                                       
                                        <table id="example" class="display table table-hover table-condensed">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Tên Sản Phẩm</th>
                                                    <th>Hình</th>
                                                    <th>Giá Bán</th>
                                                    <th> Loại</th>
                                                    <th>Mô tả</th>
                                                    <th>Màu</th>
                                                    <th>Nhà Cung Cấp</th>
                                                    <th>Số Lượng</th>
                                                    

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% var id = 0 %>
                                                <% var tonkho = 0 %> 
                                 
                                                <% prod.forEach(function(pros){ id ++%>
                                                <tr>
                                                    <td><%= id%></td>
                                                    <td><%= pros.name%></td>
                                                    <td> <img src="../uploads/product/<%= pros.images%>" width="100px" alt=""></td>
                                                    <td><%= pros.price%></td>
                                                    <td><%= pros.productType.name %></td>
                                                    <td><%= pros.description%></td>
                                                    <td><%= pros.color%></td>
                                                    <td><%= pros.NhaCungCap.CongTy%></td>
                                                    <td><%= pros.stock%></td>
                                                    <td>
                                                        <a href="./deleteproduct/<%= pros._id %>">Xoá</a> | 
                                                        <a href="./getproductupdate/<%= pros._id %>">Sửa</a>
                                                    </td>
                                                </tr>
                                             
                                                <%})%>
                                            </tbody>
                                        </table>
                                    <h1>Số Lượng:<%= total %></h1>
                                 
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </section>
            <!-- END CONTENT -->
            <div class="chatapi-windows ">

            </div>

<% include ../playout/footer.ejs %>
