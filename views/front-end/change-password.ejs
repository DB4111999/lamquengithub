
  <!DOCTYPE html>
  <html lang="en">
  <head>
      <% include ../partials/head %>
  </head>
  <body>
      <div class="header">
          <% include ../partials/header %>
      </div>
      <div class="mainresetpassword pt-5 pb-5 ">
        <div class="container">
            <div class="textheadrlogin">
                <div class="row">
                    <div class="col-md-6">
                        <a href="/">Trang chủ</a><span><i class="fa fa-angle-right"
                            aria-hidden="true"></i></span><label for="">Thay Đổi mật khẩu</label>
                    </div>
                    <div class="col-md-6 text-right">
                        <div>
                            <h5>THAY ĐỔI MẬT KHẨU</h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="resetpassword col-md-6 pt-5 offset-md-3">
                    <div class="textresetpassword">
                        <h5>THAY ĐỔI MẬT KHẨU</h5>
                    </div>
                    <%if (message != "undefined") { %>
                        <div
                          class="form-group form-control error"
                          style="background-color: #FFCCCC; font-weight: bold; color : rgb(210, 29, 29)"
                        >
                          <%= message %>
                        </div>
                        <% } %>
                    <form id="forgot-password"
                    method="post"
                    novalidate="novalidate"
                    action="/change-password"> 
                        <label for="psw">Mật khẩu Cũ:</label>
                        <input type="password"
                        name="oldpass"
                        class="form-control"
                        placeholder="Nhập mật khẩu cũ"
                        required>
                        <label for="psw">Mật khẩu mới:</label>
                        <input type="password"
                        name="newpass"
                        class="form-control"
                        placeholder="Nhập mật khẩu mới"
                        required>
                        <label for="psw">Nhập lại mật khẩu mới:</label>
                        <input 
                        type="password"
                          name="newpass2"
                        class="form-control"
                        placeholder="Nhập lại mật khẩu mới"
                        required>
                        <button type="submit">ĐẶT LẠI MẬT KHẨU</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
      <div class="footer">
          <% include ../partials/footer %>
      </div>
  </body>
  </html>