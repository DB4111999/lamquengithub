
  <!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>
    <div class="header">
        <% include ../partials/header %>
    </div>
    <div class="mainforgotpassword pb-5 pt-5 ">
      <div class="container">
          <div class="textheadrlogin">
              <div class="row">
                  <div class="col-md-6">
                      <a href="/">Trang chủ</a><span><i class="fa fa-angle-right"
                          aria-hidden="true"></i></span><label for="">XÁC THỰC EMAIL</label>
                  </div>
                  <div class="col-md-6 text-right">
                      <div>
                          <h5>XÁC THỰC TÀI KHOẢN CỦA BẠN</h5>
                      </div>
                  </div>
              </div>
          </div>
      </div>
      <div class="container">
          <div class="row">
            <div class="col-md-3"></div>
              <div class="resetpass col-md-6 pt-5">
                  <h5>XÁC THỰC EMAIL</h5>
                  <p class="pt-3"> Nhận mã xác thực đã gửi ở email: <%= user.email %></p>
                  <form id="createaccount"
                  method="post"
                  novalidate="novalidate"
                  action="/verify-email" class=" pt-3 pb-3">
                    <% if (message.length > 0) { %>
                      <div class="alert alert-danger"><%= message %></div>
                    <% } %>
                      <div>
                          <label for="uname">Nhập mã xác thực</label>
                          <span class="required">*</span>
                          <input
                          type="text"
                          name="token"
                          class="form-control"
                          id="confirm"
                          placeholder="Mã xác thực"
                        />
                        <button style="color: aliceblue;" class="btn btn-border" type="submit">
                          XÁC THỰC
                        </button>
                      </div>
                  </form>
              </div>
              <div class="col-md-3"></div>
          </div>
      </div>
  </div>
  
    <div class="footer">
        <% include ../partials/footer %>
    </div>
</body>
</html>